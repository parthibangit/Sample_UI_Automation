<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "http://testng.org/testng-1.0.dtd">
<suite name="Smoke Suite">

    <parameter name="browserName" value="chrome" />
    <test verbose="2" name="Ecommerce">

        <classes>
            <class name="sample.ecommerce.HomePageTest">

                <methods>
                    <include name="create_new_user_and_verify_success_message" />
                    <include name="verify_user_able_to_sign_in_with_valid_credentials" />
                    <include name="verify_shopping_cart_section_is_empty_for_new_user" />
                    <include name="verify_success_message_displays_when_user_retrieve_password_using_forgot_password" />
                    <include name="verify_my_order_section_is_empty_for_new_user" />
                    <include name="verify_my_credit_slip_section_is_empty_for_new_user" />
                </methods>

            </class>
        </classes>

    </test>
</suite>